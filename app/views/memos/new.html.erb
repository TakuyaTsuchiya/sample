<h1>新規作成</h1>

<%= form_tag('/create') do %>
  <p>
    件名:<%= text_field :memos, :title %>
  </p>
  <p>
    内容:<%= text_field :memos, :body %>
  </p>
  <p>
    カテゴリ:
    <%= select_tag "memos[category_id]",
    options_from_collection_for_select(@categories, "id", "name")
    %>
  </p>
  <%= submit_tag '確定' %>
<% end %>

